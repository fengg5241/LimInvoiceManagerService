server:
  port: 9092
 
spring:
  application:
    name: gion-dining-cms
  datasource:
    name: dataSource
    url: jdbc:mysql://10.0.75.1:3306/gion_dining_cms?useUnicode=true&characterEncoding=utf8&allowMultiQueries=true
    username: root
    password: root
    #使用druid数据源
    type: com.alibaba.druid.pool.DruidDataSource
    driverClassName: com.mysql.jdbc.Driver
    #配置监控统计拦截的filters
    filters: stat
    maxActive: 20
    initialSize: 1
    #配置获取连接等待超时的时间 
    maxWait: 60000
    minIdle: 1
    #配置间隔多久才进行一次检测，检测需要关闭的空闲连接，单位是毫秒
    timeBetweenEvictionRunsMillis: 60000
    #配置一个连接在池中最小生存的时间，单位是毫秒
    minEvictableIdleTimeMillis: 300000
    validationQuery: select 'x'
    testWhileIdle: true
    testOnBorrow: false
    testOnReturn: false
    #打开PSCache，并且指定每个连接上PSCache的大小
    poolPreparedStatements: true
    maxOpenPreparedStatements: 20
 
 
 
 
mybatis:
  mapper-locations: classpath:sqlmapper/*.xml  #指定*Mapper.xml的位置
  type-aliases-package: com.gion.cms.entity
  
mapper:
    mappers:
        - com.gion.cms.mapper
    not-empty: false
    identity: MYSQL
    

#设置日志级别，打印mybatis的日志
logging:
  level:
    root: debug
